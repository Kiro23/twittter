<% provide(:title, 'Войти') %>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
    <h1>Регистрация</h1>
    <%#= render 'shared/error_messages' %>
    
    <%= form_for :session, url: sessions_path do |f| %>
    
    <%=f.label :email %>
    <%= f.text_field :email %>
    
    <%=f.label :password %>
    <%= f.password_field :password %>
    
    <%= f.submit 'Войти', class: 'btn btn-primary' %>
    </div>
</div>
<% end %>